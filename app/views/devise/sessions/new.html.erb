<%= render 'shared/banner' %>

  <div class="border">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-sm-offset-4 col-md-4 col-md-offset-4>
          <div class="form-login">

           <%= render "devise/shared/links_facebook" %>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email, required: false, autofocus: true, placeholder: 'E-mail', label: false %>
                <%= f.input :password, required: false, placeholder: 'Mot de passe', label: false %>
                <%= f.input :remember_me, label: 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
              </div>
              <div class="form-action marginb">
                <%= f.button :submit, "Connexion", class: "btn btn_log"%>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
        </div>
      </div>
     </div>
    </div>
  </div>
