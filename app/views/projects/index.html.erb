                    <p>Impact : 70 personnes</p>

                  </div>
                </div>
              </div>

              <!--projet 3-->
              <div class="col-md-3 col-xs-12">
                <div class="thumbnail">
                  <%= image_tag 'pompe_eau_femmes.jpg' %>
                  <div class="caption">
                    <h3 class="capitalize"></h3>
                    <p>Objectif : 2000 photos</p> <br />

